<div class="col-lg-10">
  <% if notice.present? %>
    <p class="alert alert-primary"><%= notice %></p>
  <% end %> 
 
  <h1>Projects</h1>
  <%= link_to "New Project", new_admin_project_path, class: "btn btn-primary mb-2" %>
  <%= search_form_for @q, url: :admin_projects do |form| %>
    <div class="d-flex align-items-end mb-2" style="gap: 10px;">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.search_field :name_cont, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
      </div>
      <div class="form-group">
        <%= link_to "Clear Search", request.path, class:"btn btn-secondary" %>
      </div>
    </div>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th>Project</th> 
        <th colspan="3">Actions</th>  
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to 'View', admin_project_path(project), class: "btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_admin_project_path(project), class: "btn btn-warning" %></td>
          <td><%= link_to 'Delete', admin_project_path(project), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @projects %>
</div>
