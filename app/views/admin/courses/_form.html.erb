<%= form_with(model: [:admin, course]) do |form| %>
  <%= render "admin/shared/error", model: course %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control form-control-lg" %>
  </div>

   <div class="form-group">
    <%= form.label :content, style: "display: block" %>
    <%= form.rich_text_area :content, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary my-2" %>
  </div>
<% end %>
