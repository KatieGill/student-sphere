<div class="col-lg-10">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-body">
    <% if notice.present? %>
      <p class="alert alert-primary"><%= notice %></p>
    <% end %> 
    <div class="d-flex justify-content-between">
      <div>
        <h1><%= @blog.title %></h1>
        <p><strong>Author: </strong><%= "#{@blog.student.first_name} #{@blog.student.last_name}"%></p>
        <%= link_to 'Back to blogs', admin_blogs_path, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_admin_blog_path(@blog), class: "btn btn-secondary" %>
      </div>
      <div class="me-5 d-flex justify-content-center align-items-center">
        <%= image_tag @blog.student.profile_image, style: "width: 150px; height: 150px;", class: "rounded-circle me-2" %>
      </div>  
    </div>
    <p><%= @blog.content %></p>


    
    </div>
  </div>
</div>
