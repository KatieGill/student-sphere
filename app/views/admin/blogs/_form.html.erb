<%= form_with(model: [:admin, blog]) do |form| %>
  <%= render "admin/shared/error", model: blog %>
  <div class="form-group">
    <%= form.label :student_id, "Student ID", style: "display: block" %>
    <%= form.number_field :student_id, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :content, style: "display: block" %>
    <%= form.rich_text_area :content, class: "form-control form-control-lg" %>
  </div>


  <div class="form-group">
    <%= form.submit class: "btn btn-primary my-2" %>
  </div>
<% end %>

