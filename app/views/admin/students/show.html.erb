<div class="col-lg-10">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-body">
      <% if notice.present? %>
          <p class="alert alert-primary"><%= notice %></p>
      <% end %>
      <div class="d-flex justify-content-between">
        <div>
          <h1>Student Details</h1>
          <p><strong>Name: </strong><%= @student.full_name %></p>
          <p><strong>Student ID: </strong><%= @student.id %></p>
          <p><strong>Email: </strong><%= @student.email %></p>
          <p><strong>Permanent Address: </strong><%= @student.permanent_address %></p>
          <p><strong>Date of Birth: </strong><%= formatted_date(@student.date_of_birth) %></p>
          <p><strong>Age: </strong><%= @student.age %></p>
          <p><strong>Courses: </strong>
            <ol>
            <% @student.courses.each do |course|%>
              <li><%= course.name %></li>
            <% end %>
            </ol>
          </p>
          <p><strong>Projects: </strong>
            <ol>
            <% @student.projects.each do |project|%>
              <li><%= project.name %></li>
            <% end %>
            </ol>
          </p>
          <p><strong>Blog: </strong>
            <% @student.blogs.each do |blog|%>
              <%= blog.title %>
            <% end %>
          </p>
        </div>
        <div class="d-flex justify-content-center align-items-center">
          <% if @student.profile_image.attached? %>
            <%= image_tag @student.profile_image, style: "width: 300px; height: 300px;", class: "rounded-circle me-5" %>
          <% end %>
        </div>
      </div>
      <%= link_to 'Back to students', admin_students_path, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_admin_student_path(@student), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
