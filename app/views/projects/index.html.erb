<div class="col-lg-10">
  <% if notice.present? %>
    <p class="alert alert-primary"><%= notice %></p>
  <% end %> 
 
  <h1>Projects</h1>
  <%= link_to "New project", new_project_path, class: "btn btn-primary mb-2" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Project</th> 
        <th colspan="3">Actions</th>  
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to 'View', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Delete', project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
