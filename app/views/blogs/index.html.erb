<div class="col-lg-10">
  <% if notice.present? %>
    <p class="alert alert-primary"><%= notice %></p>
  <% end %> 

  <h1>Blogs</h1>
  <%= link_to "New blog", new_blog_path, class: "btn btn-primary mb-2" %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Student</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.student.name_with_email%></td>
          <td><%= link_to 'View', blog %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Delete', blog, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>



