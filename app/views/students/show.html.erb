<div class="col-lg-10">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-body">
      <% if notice.present? %>
        <p class="alert alert-primary"><%= notice %></p>
      <% end %>
      <h1>Student Details</h1>

      <p><strong>Name: </strong><%= @student.full_name %></p>
      <p><strong>Email: </strong><%= @student.email %></p>
      <p><strong>Permanent Address: </strong><%= @student.permanent_address %></p>
      <p><strong>Date of Birth: </strong><%= formatted_date(@student.date_of_birth) %></p>
      <p><strong>Age: </strong><%= @student.age %></p>

      <%= link_to 'Back to students', students_path, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_student_path(@student), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
